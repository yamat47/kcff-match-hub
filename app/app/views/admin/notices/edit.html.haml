:ruby
  add_breadcrumb t('view.admin.breadcrumbs.notices.index'), admin_notices_path
  add_breadcrumb @notice.title
  add_breadcrumb t('view.admin.breadcrumbs.actions.edit')
  content_for(:title, t('view.admin.page_title.notices.edit', universal_id: @notice.universal_id))

.admin-content
  .admin-content__title
    .admin-title
      .admin-title__image
        = image_tag 'icon-newspaper.png', class: 'admin-title-image'
      .admin-title__text
        %h1.admin-title_text
          = @notice.title

  .admin-content__fields
    = render 'form', notice: @notice, url: admin_notice_path, cancel_path: admin_notice_path(@notice)
