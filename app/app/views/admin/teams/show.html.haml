:ruby
  add_breadcrumb t('view.admin.breadcrumbs.teams.index'), admin_teams_path
  add_breadcrumb @team.name

.admin-content
  .admin-content__title
    .admin-title
      .admin-title__image
        = image_tag 'icon-team.png', class: 'admin-title-image'
      .admin-title__text
        %h1.admin-title_text
          = @team.name
      .admin-title__actions
        .admin-title-actions
          .admin-title-actions__action
            = link_to t('view.admin.button.edit'), edit_admin_team_path(@team),
                      class: 'admin-title-action_button'
          .admin-title-actions__action
            = button_to t('view.admin.button.destroy'), admin_team_path(@team),
                        method: :delete, data: data_for_confirm(confirm_message: t('view.admin.confirm.destroy')),
                        class: 'admin-title-action_button'

  .admin-content__main
    .admin-content-main
      .admin-content-main__fields
        .admin-content__fields
          .admin-fields
            .admin-fields__field
              .admin-field
                .admin-field__label
                  = Team.human_attribute_name(:universal_id)
                .admin-field__value
                  = @team.universal_id
            .admin-fields__field
              .admin-field
                .admin-field__label
                  = Team.human_attribute_name(:name)
                .admin-field__value
                  = @team.name

      .admin-content-main__sections
        .admin-content__sections
          .admin-content-sections
            .admin-content-sections__section
              %section.admin-content-section
                .admin-content-section__title
                  %h2.admin-content-section-title
                    .admin-content-section-title__text
                      画像
                    .admin-content-section-title__actions
                      .admin-content-section-title-actions
                        - if @team.logo.attached?
                          .admin-content-section-title-actions__action
                            = link_to t('view.admin.button.edit'), edit_admin_team_logo_path(team_id: @team),
                                      class: 'admin-content-section-title-action_button'
                          .admin-content-section-title-actions__action
                            = button_to t('view.admin.button.destroy'), admin_team_logo_path(team_id: @team),
                                        method: :delete, data: data_for_confirm(confirm_message: t('view.admin.confirm.destroy')),
                                        class: 'admin-content-section-title-action_button'
                        - else
                          .admin-content-section-title-actions__action
                            = link_to t('view.admin.button.edit'), new_admin_team_logo_path(team_id: @team),
                                      class: 'admin-content-section-title-action_button'
                .admin-content-section__fields
                  %table.admin-content-section-fields
                    %tr.admin-content-section-field
                      %th.admin-content-section-field__label
                        .admin-content-section-field-label
                          = Team.human_attribute_name(:logo)
                      %td.admin-content-section-field__value
                        .admin-content-section-field-value
                          - if @team.logo.attached?
                            = image_tag @team.logo.url, class: 'admin-field-value-image'
                          - else
                            = t('view.admin.no_data')
